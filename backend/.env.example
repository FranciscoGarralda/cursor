# Configuración del servidor
PORT=3000
NODE_ENV=development

# Base de datos
MONGODB_URI=mongodb://localhost:27017/uploadapp

# Autenticación
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# Configuración de subida de archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB en bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,mp4,mp3

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100  # máximo 100 requests por ventana

# Configuración de email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Configuración de almacenamiento en la nube (opcional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_bucket_name
AWS_REGION=us-east-1

# URLs de las aplicaciones cliente
DESKTOP_APP_URL=http://localhost:8080
MOBILE_APP_URL=http://localhost:8081

# Configuración de logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log