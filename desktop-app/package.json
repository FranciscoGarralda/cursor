{
  "name": "upload-desktop-app",
  "version": "1.0.0",
  "description": "Desktop upload application built with Electron",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start:renderer\" \"wait-on http://localhost:3000 && electron .\"",
    "start:renderer": "cd src/renderer && npm start",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "cd src/renderer && npm run build",
    "build:win": "npm run build:renderer && electron-builder --win",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "build:linux": "npm run build:renderer && electron-builder --linux",
    "test": "jest",
    "lint": "eslint src/",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "axios": "^1.6.2",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.8.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "jest": "^29.7.0",
    "eslint": "^8.55.0"
  },
  "build": {
    "appId": "com.uploadapp.desktop",
    "productName": "Upload App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "src/renderer/build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "engines": {
    "node": ">=18"
  }
}