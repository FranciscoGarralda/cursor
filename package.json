{
  "name": "upload-app-workspace",
  "version": "1.0.0",
  "description": "Cross-platform upload application for iPhone and Desktop",
  "private": true,
  "workspaces": [
    "mobile-app",
    "desktop-app",
    "backend"
  ],
  "scripts": {
    "install-all": "npm install && npm run install:mobile && npm run install:desktop && npm run install:backend",
    "install:mobile": "cd mobile-app && npm install",
    "install:desktop": "cd desktop-app && npm install",
    "install:backend": "cd backend && npm install",
    "start:mobile": "cd mobile-app && npm start",
    "start:desktop": "cd desktop-app && npm start",
    "start:backend": "cd backend && npm start",
    "build:mobile": "cd mobile-app && npm run build",
    "build:desktop": "cd desktop-app && npm run build",
    "build:backend": "cd backend && npm run build",
    "ios": "cd mobile-app && npx react-native run-ios",
    "android": "cd mobile-app && npx react-native run-android",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:desktop\"",
    "test": "npm run test:mobile && npm run test:desktop && npm run test:backend",
    "test:mobile": "cd mobile-app && npm test",
    "test:desktop": "cd desktop-app && npm test",
    "test:backend": "cd backend && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}